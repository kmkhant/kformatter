{
  "name": "kmformatter",
  "version": "0.0.1",
  "description": "Convert numbers to k,m... made easy",
  "main": "lib/index.js",
  "scripts": {   
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kmkhant/kformatter.git"
  },
  "keywords": [
    "formatter",
    "k",
    "kformatter",
    "text",
    "formatting"
  ],
  "author": "Khaing Myel Khant",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/kmkhant/kformatter/issues"
  },
  "homepage": "https://github.com/kmkhant/kformatter#readme",
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.0.4"
  },
  "files": [
    "lib/**/*"
  ]
}
